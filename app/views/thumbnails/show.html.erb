<div class="page-header">
  <%= link_to thumbnails_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_thumbnail_path(@thumbnail), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show thumbnail</h1>
</div>

<dl class="dl-horizontal">
  <dt>Thumb post:</dt>
  <dd><%= @thumbnail.thumb_post %></dd>

  <dt>Thumb title:</dt>
  <dd><%= @thumbnail.thumb_title %></dd>

  <dt>Thumb image:</dt>
  <dd><%= @thumbnail.thumb_image %></dd>

</dl>
