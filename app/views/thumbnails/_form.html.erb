<%= nested_form_for(@thumbnail, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @thumbnail.errors.any? %>
    <div class="alert alert-danger alert-dilgissable">
      <button type="button" class="close" data-dilgiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@thumbnail.errors.count, "error") %> prohibited this thumbnail from being saved:</h4>

      <ul>
      <% @thumbnail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label "ចំណងជើង", :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :thumb_title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "រូបភាព", :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.file_field :thumb_image, :class => "form-control " %>
      </div>
  </div>
    <div class="form-group">
      <%= f.label "អត្ថន័យទំព័រមុខ", :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_area :thumb_post, :class => "form-control wysihtml5", :rows => 10 %>
      </div>
  </div>
<div class="col-lg-2 control-label">

</div>    
<div class="col-lg-10">
    <div class= "dialog dialog-warning" id="tasks">
      <%= f.fields_for :posts, :wrapper => true do |post| %>
         <span> <%= post.label "រូបភាព" %> <%= post.link_to_remove '<span class="glyphicon glyphicon-remove"></span>'.html_safe, style:"float:right;margin-top:-10px;color:red;" %> </span>
          <%= post.file_field :image, class: "form-control" %>
          <%= post.label "ពិពណ៌នា" %>
          <%= post.text_area :description, :rows => 10, class: "form-control wysihtml5" %>
          <hr style="margin-bottom:0px;">
      <% end %>
    </div>
</div>
<p><%= f.link_to_add '<span class="glyphicon glyphicon-plus"></span> បន្ថែមអត្ថបទ'.html_safe, :posts, :data => { :target => "#tasks" } %></p>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'បង្កើតពត៌មាន', :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
