<div>
<div class="show-page mar-t">

<h6><%= @thumbnail.thumb_title %></h6>
	<p style="color:#777;">ផ្សាយដោយ: <%= @thumbnail.user.username %>
		<span>
		<% if @thumbnail.created_at > Time.now.beginning_of_day %>
			<%="#{time_ago_in_words(@thumbnail.created_at)} ago"%> 
		<% else %> 
			<%= @thumbnail.created_at.strftime("%b %d, %Y") %>
		<% end %>

		</span>	
	</p>
<div class="image" style="margin-top:0px;"><%= image_tag(@thumbnail.thumb_image)%></div>	
<div class="desc"><%= @thumbnail.thumb_post.html_safe %></div>
	<% @thumbnail.posts.each do |post|%>	
		<div class="image"><%= image_tag post.image%></div>
		<div class="desc"><%= post.description.html_safe %></div>
	<% end %>
</div> 

<div class="last-news">
	<p>អត្ថបទថ្មីៗ​</p>
	<div class="dialog dialog-info">
		<% @news.each do |n| %>
		<%= link_to site_show_path(post_id: n) do%>
			<ul>
				<span class="glyphicon glyphicon-hand-right"></span> &nbsp;<%= truncate(n.thumb_title,length: 70) %>
				<div class="align-time" style="float:right;">
				<% if n.created_at > Time.now.beginning_of_day %>
					<%="#{time_ago_in_words(n.created_at)} ago"%> 
				<% else %> 
					<%= n.created_at.strftime("%b %d, %Y") %>
				<% end %>
				</div>
			</ul>
		<% end %>
		<% end %>
	</div>
</div>

